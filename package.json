{
	"name": "ustc-fpgaol",
	"displayName": "USTC-FPGAOL",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:ustc-fpgaol-explorer",
		"onCommand:ustc-fpgaol.login",
		"onCommand:ustc-fpgaol.logout",
		"onCommand:ustc-fpgaol.refreshDeviceStatus",
		"onCommand:ustc-fpgaol.openDevice",
		"onCommand:ustc-fpgaol.compile",
		"onCommand:ustc-fpgaol.queryCompileStatus",
		"onCommand:ustc-fpgaol.refreshCompileStatus",
		"onCommand:ustc-fpgaol.welcome"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ustc-fpgaol.login",
				"title": "Login",
				"category": "FPGAOL"
			},
			{
				"command": "ustc-fpgaol.logout",
				"title": "Logout",
				"category": "FPGAOL"
			},
			{
				"command": "ustc-fpgaol.welcome",
				"title": "Welcome",
				"category": "FPGAOL"
			},
			{
				"command": "ustc-fpgaol.refreshDeviceStatus",
				"title": "Refresh Status",
				"icon": "media/refresh.svg",
				"category": "FPGAOL"
			},
			{
				"command": "ustc-fpgaol.openDevice",
				"title": "Open",
				"category": "FPGAOL"
			},
			{
				"command": "ustc-fpgaol.compile",
				"title": "Compile Current File",
				"category": "FPGAOL"
			},
			{
				"command": "ustc-fpgaol.queryCompileStatus",
				"title": "Query Compile Status",
				"category": "FPGAOL"
			},
			{
				"command": "ustc-fpgaol.refreshCompileStatus",
				"title": "Refresh Compile Status",
				"icon": "media/refresh.svg",
				"category": "FPGAOL"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ustc-fpgaol-explorer",
					"title": "fpgaol",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"ustc-fpgaol-explorer": [
				{
					"id": "Commands",
					"name": "功能"
				},
				{
					"id": "CompileStatus",
					"name": "编译状态"
				},
				{
					"id": "DeviceStatus",
					"name": "设备状态"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"when": "view == Commands",
					"command": "ustc-fpgaol.login"
				},
				{
					"when": "view == Commands",
					"command": "ustc-fpgaol.logout"
				},
				{
					"when": "view == DeviceStatus",
					"command": "ustc-fpgaol.refreshDeviceStatus",
					"group": "navigation"
				},
				{
					"when": "view == CompileStatus",
					"command": "ustc-fpgaol.refreshCompileStatus",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"when": "resourceFilename =~ /\\.zip/",
					"command": "ustc-fpgaol.compile",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.0.3",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.4",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"@types/pug": "^2.0.6",
		"@types/request-promise": "^4.1.48",
		"jssoup": "^0.0.15",
		"pug": "^3.0.2",
		"request-promise": "^4.2.5",
		"requests": "^0.3.0"
	}
}
