{
  "name": "ustc-fpgaol",
	"displayName": "USTC-FPGAOL",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:ustc-fpgaol-explorer",
        "onCommand:ustc-fpgaol.login",
        "onCommand:ustc-fpgaol.welcome"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ustc-fpgaol.login",
				"title": "Login",
				"category": "FPGAOL",
				"icon": "$(debug-start)"
			},
			{
				"command": "ustc-fpgaol.welcome",
				"title": "Welcome",
				"icon": "$(debug-start)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ustc-fpgaol-explorer",
					"title": "fpgaol",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"ustc-fpgaol-explorer": [
			{
				"id": "Commands",
				"name": "功能"
			},
			{
				"id": "Status",
				"name": "状态"
			}
			]
		},
		"menus": {
			"view/title": [
			  {
				"when": "view == Commands",
				"command": "ustc-fpgaol.login"
			  }
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"ts-loader": "^9.2.6",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1",
		"@vscode/test-electron": "^2.0.3"
	}
}
